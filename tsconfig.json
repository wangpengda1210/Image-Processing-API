{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["ES6"],
    "outDir": "./build",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "build",
    "spec"
  ]
}